<%= simple_form_for (@restaurant), html: { class: 'form-horizontal' }, wrapper: :horizontal_form do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category, collection: @restaurant.categories %>
  <%= f.submit class: "btn btn-primary"%>
<% end %>
